<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Roast ID (not editable) -->
    <TextView
        android:id="@+id/textViewRoastID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roast ID"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Batch Number -->
    <EditText
        android:id="@+id/editTextBatchNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Batch Number"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <!-- Roaster Name -->
    <EditText
        android:id="@+id/editTextRoasterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Roaster Name"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <!-- Roast Date -->
    <EditText
        android:id="@+id/editTextRoastDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Roast Date"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <!-- Update, Delete, Cancel Buttons -->
    <Button
        android:id="@+id/buttonUpdateRoast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update" />

    <Button
        android:id="@+id/buttonDeleteRoast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete" />

    <Button
        android:id="@+id/buttonCancelRoast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel" />

</LinearLayout>
